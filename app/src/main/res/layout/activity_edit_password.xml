<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="editviewmodel"
            type="com.mz.befclient.editpassword.EditPasswordViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editpassword.EditPasswordActivity"
        android:background="#FAFAFA">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/dinnextextbold2"
                android:textColor="#202020"
                android:layout_gravity="center_horizontal"
                android:text="تغيير كلمة المرور"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relative1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/logo"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@drawable/ic_change_pic"
                    android:layout_margin="@dimen/_10sdp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:hint="كلمة المرور القديمة"
                    app:passwordToggleTint="#8A8A8A"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logo"
                    android:layout_margin="@dimen/_10sdp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_pass_icon">
                    <EditText
                        android:id="@+id/et_old_password"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/_14ssp"
                        android:inputType="textPassword"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center"
                        android:fontFamily="@font/dinnextextregular4"
                        android:maxLines="1"
                        android:textColorHint="#8A8A8A"
                        android:padding="@dimen/_10sdp"
                        android:drawableRight="@drawable/ic_pass_icon"
                        android:hint="كلمة المرور القديمة"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:hint="كلمة المرور الجديدة"
                    app:passwordToggleTint="#8A8A8A"
                    app:passwordToggleEnabled="true"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative2"
                    android:layout_margin="@dimen/_10sdp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_pass_icon">
                    <EditText
                        android:id="@+id/et_new_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:inputType="textPassword"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center"
                        android:fontFamily="@font/dinnextextregular4"
                        android:maxLines="1"
                        android:textColorHint="#8A8A8A"
                        android:padding="@dimen/_10sdp"
                        android:hint="كلمة المرور الجديدة"
                        android:drawableRight="@drawable/pass_icon2"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/relative4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="#8A8A8A"
                    app:hintTextAppearance="@style/TextAppearance.AppCompat.Large"
                    android:hint="تأكيد كلمة المرور الجديدة"
                    app:passwordToggleTint="#8A8A8A"
                    app:startIconDrawable="@drawable/ic_pass_icon"
                    app:endIconMode="password_toggle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative3"
                    android:layout_margin="@dimen/_10sdp"
                    app:boxBackgroundMode="none"
                    app:hintEnabled="false">
                    <EditText
                        android:id="@+id/et_confirm_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:inputType="textPassword"
                        android:background="@drawable/txt_login_bg"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:fontFamily="@font/dinnextextregular4"
                        android:maxLines="1"
                        android:hint=" تأكيد كلمة المرور الجديدة"
                        android:textColorHint="#8A8A8A"/>
                </com.google.android.material.textfield.TextInputLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login_bg"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/relative4"
                    android:layout_margin="@dimen/_8sdp"
                    android:padding="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:text="حفظ كلمة المرور الجديدة"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dinnextmedium3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
