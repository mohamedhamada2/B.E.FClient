<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="verificationcodeviewmodel"
            type="com.mz.befclient.signup.VerificationCodeViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".signup.VerificationCodeActivity"
        android:background="#fbfbfb">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
                <TextView
                    android:id="@+id/txt_products"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_18ssp"
                    android:fontFamily="@font/dinnextextbold2"
                    android:textColor="#202020"
                    android:layout_gravity="center_horizontal"
                    android:text="تأكد من أنه أنت"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:id="@+id/back_img"
                    android:layout_width="@dimen/_48sdp"
                    android:layout_height="@dimen/_48sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/back_icon"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"/>
            <ImageView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/logo"
                android:layout_marginTop="@dimen/_40sdp"/>
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_13ssp"
                android:text="انتظر سيتم ارسال رسالة نصية بها رمز التحقق الي"
                android:fontFamily="@font/cairo_semibold"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/cairo_semibold"
                android:text="+201065242773"/>

            <EditText
                android:layout_gravity="center_horizontal"
                android:id="@+id/pin_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:itemBackground="@color/white"
                android:cursorVisible="true"
                android:inputType="number"
                android:textSize="@dimen/_14ssp"
                android:background="@drawable/txt_login_bg"
                android:textColor="@color/purple_500"
                android:layout_marginStart="@dimen/_25sdp"
                android:layout_marginEnd="@dimen/_25sdp"
                android:elevation="@dimen/_5sdp"
                android:gravity="center"
                android:hint="رمز التحقق"
                android:textColorHint="#8A8A8A"
                android:fontFamily="@font/cairo_semibold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_add"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:background="@drawable/btn_login_bg"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_25sdp"
                android:elevation="@dimen/_20sdp"
                android:fontFamily="@font/cairo_semibold"
                android:text="تأكيد"
                android:layout_marginRight="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_10sdp" />


            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</layout>