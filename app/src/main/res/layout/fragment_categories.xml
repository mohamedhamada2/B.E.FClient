<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="categoryviewmodel"
            type="com.mz.befclient.categories.CategoryViewModel" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".categories.CategoriesFragment">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/dinnextextbold2"
            android:textColor="#202020"
            android:layout_gravity="center_horizontal"
            android:text="الأقسام"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_centerInParent="true"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/basket_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="@dimen/_5sdp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            app:cardCornerRadius="@dimen/_30sdp"
            android:layout_margin="@dimen/_10sdp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cart_icon"
                android:layout_margin="@dimen/_5sdp"/>
            <TextView
                android:id="@+id/txt_basket"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:background="@drawable/circle"
                android:layout_margin="@dimen/_5sdp"
                android:textSize="@dimen/_8ssp"
                android:fontFamily="@font/dinnextextbold2"
                android:textColor="@color/white"
                android:text="0"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#cccccc" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>
</layout>
