<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_8sdp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="@dimen/_5sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/cancel_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_baseline_cancel"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_gravity="right"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/_5sdp">
                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:layout_margin="@dimen/_5sdp"/>
                    <ImageView
                        android:id="@+id/empty_img"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="fitXY"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/ellipse_5"/>
                    <TextView
                        android:id="@+id/out_of_stock_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/cairo_semibold"
                        android:layout_gravity="center"
                        android:text="نفذت الكمية"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center"
                        android:padding="@dimen/_3sdp"
                        android:textColor="@color/purple_500"
                        android:visibility="gone"/>
                </FrameLayout>
                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/dinnextextregular4"
                    android:textSize="@dimen/_14ssp"
                    android:textColor="#202020"
                    android:layout_margin="@dimen/_3sdp"
                    android:gravity="center_horizontal"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/product_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textColor="@color/purple_500"
                        android:text="Product code:"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/txt_product_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/product_code"
                        android:text="#11249487"
                        android:fontFamily="@font/dinnextmedium3"
                        android:textColor="#202020"
                        android:textSize="@dimen/_15ssp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/flow_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textColor="@color/purple_500"
                        android:text="Flow line:"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/txt_flow_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/flow_line"
                        android:text="#11249487"
                        android:fontFamily="@font/dinnextmedium3"
                        android:textColor="#202020"
                        android:textSize="@dimen/_15ssp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textColor="@color/purple_500"
                        android:text="Frame:" />
                    <TextView
                        android:id="@+id/txt_frame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/frame"
                        android:text="تم التوصيل"
                        android:fontFamily="@font/dinnextmedium3"
                        android:textColor="#202020"
                        android:textSize="@dimen/_15ssp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/fac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textColor="@color/purple_500"
                        android:text="Fac:" />
                    <TextView
                        android:id="@+id/txt_fac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_toRightOf="@+id/fac"
                        android:text="تم التوصيل"
                        android:fontFamily="@font/dinnextmedium3"
                        android:textColor="#202020"
                        android:textSize="@dimen/_15ssp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إختر طريقة الشراء"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#202020"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"/>
                <Spinner
                    android:id="@+id/spinner_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/spinner_item"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/spinner_government"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <RelativeLayout
                    android:id="@+id/relative_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/packet_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/_14ssp"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textColor="@color/purple_500"
                        android:text="عدد القطع بداخل الكرتونة:"
                        android:layout_marginTop="@dimen/_5sdp"/>
                    <TextView
                        android:id="@+id/txt_packet_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_toLeftOf="@+id/packet_amount"
                        android:text="8"
                        android:fontFamily="@font/dinnextmedium3"
                        android:textColor="#202020"
                        android:textSize="@dimen/_15ssp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:id="@+id/product_after_offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dinnextextbold2"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="#202020"
                        android:text="54 جنيه"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/product_before_offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="‏100 جنيه"
                        android:textColor="#ABABAB"
                        android:textSize="@dimen/_14ssp"
                        android:layout_toRightOf="@+id/product_after_offer_price"
                        android:fontFamily="@font/dinnextextregular4"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:foreground="@drawable/line_bg" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_gravity="center_horizontal">
                    <ImageView
                        android:id="@+id/minus_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_minus"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>
                    <ImageView
                        android:id="@+id/add_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_add"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/txt_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:fontFamily="@font/dinnextmedium3"
                        android:layout_centerInParent="true"
                        android:textColor="#202020"
                        android:textSize="@dimen/_16ssp" />
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_add_to_basket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_login_bg"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dinnextmedium3"
                    android:text="إضافة للسلة"
                    android:textSize="@dimen/_16ssp"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>