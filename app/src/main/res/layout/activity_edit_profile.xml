<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="editprofileviewmodel"
            type="com.mz.befclient.editprofile.EditProfileViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".editprofile.EditProfileActivity"
        android:background="#FAFAFA">
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16ssp"
                android:fontFamily="@font/dinnextextbold2"
                android:textColor="#202020"
                android:layout_gravity="center_horizontal"
                android:text="تعديل البيانات الشخصية"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_centerInParent="true"/>
            <ImageView
                android:id="@+id/back_img"
                android:layout_width="@dimen/_48sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/back_icon"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#cccccc"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/relative1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextextbold2"
                    android:textColor="#202020"
                    android:layout_gravity="right"
                    android:text="بيانات الدخول"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="الاسم"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/et_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:background="@drawable/txt_login_bg"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="الإسم"
                    android:textColor="#202020"
                    android:fontFamily="@font/dinnextregular"
                    android:gravity="center|right"
                    android:inputType="text"
                    android:text="محمد عبد العزيز"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="رقم الموبايل"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/et_user_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:background="@drawable/txt_login_bg"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="كلمة المرور"
                    android:textColor="#202020"
                    android:fontFamily="@font/dinnextregular"
                    android:gravity="right"
                    android:inputType="number"
                    android:text="01065242773"
                    android:enabled="false"
                    android:editable="false"
                    android:focusable="false"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextextbold2"
                    android:textColor="#202020"
                    android:layout_gravity="right"
                    android:text="البيانات الشخصية"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="إسم المحل"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <EditText
                    android:id="@+id/et_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:background="@drawable/txt_login_bg"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="إسم المحل"
                    android:textColor="#202020"
                    android:fontFamily="@font/dinnextregular"
                    android:gravity="right"
                    android:inputType="text"
                    android:text="01065242773"
                    android:textColorHint="#8A8A8A"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="المحافظة"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp"/>
                <Spinner
                    android:id="@+id/spinner_government"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/spinner_item"
                    android:layout_marginTop="@dimen/_5sdp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="المدينة"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp" />
                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/spinner_item"
                    android:layout_marginTop="@dimen/_5sdp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="العنوان تفصيلي"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp" />
                <EditText
                    android:id="@+id/et_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_16ssp"
                    android:background="@drawable/txt_login_bg"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:hint="أدخل العنوان"
                    android:textColor="#202020"
                    android:fontFamily="@font/dinnextregular"
                    android:gravity="right"
                    android:inputType="text"
                    android:text="01065242773"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16ssp"
                    android:fontFamily="@font/dinnextmedium3"
                    android:textColor="#8A8A8A"
                    android:layout_gravity="right"
                    android:text="الموقع علي الخريطة"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_10sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp">
                    <ImageView
                        android:id="@+id/location_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_vuesax_outline_location"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_500"
                        android:textSize="@dimen/_13ssp"
                        android:fontFamily="@font/dinnextextregular4"
                        android:text="اختر موقعك علي الخريطة"
                        android:layout_toLeftOf="@+id/location_img"
                        android:layout_marginRight="@dimen/_8sdp"/>
                </RelativeLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:textSize="@dimen/_14ssp"
                    android:background="@drawable/btn_login_bg"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/dinnextmedium3"
                    android:inputType="text"
                    android:text="تعديل"
                    android:layout_marginBottom="@dimen/_10sdp"/>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
