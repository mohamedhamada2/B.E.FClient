<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_7sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_gravity="right">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="خصم 20% على فلاتر الزيت"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/dinnextmedium3"
            android:textColor="@color/purple_500"/>
        <TextView
            android:id="@+id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="هذا النص هو مثال لنص يمكن أن يستبدل في نفس المساحة، لقد تم توليد هذا النص من مولد النص"
            android:textSize="@dimen/_14ssp"
            android:layout_gravity="right"
            android:layout_margin="@dimen/_5sdp"
            android:fontFamily="@font/dinnextextregular4"
            android:textColor="#202020"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>