<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="newpasswordviewmodel"
            type="com.mz.befclient.forgetpassword.NewPasswordViewModel" />
    </data>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forgetpassword.NewPasswordActivity"
        android:background="#FAFAFA">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".start.StartActivity">
            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_50sdp"
                android:src="@drawable/logo"/>
            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/logo_img"
                android:background="@drawable/txt_login_bg"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/dinnextextregular4"
                android:textColor="@color/purple_500"
                android:textSize="@dimen/_15ssp"
                android:textColorHint="#828282"
                android:hint="كلمة المرور الجديدة"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_new_password"
                android:background="@drawable/btn_login_bg"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:fontFamily="@font/dinnextextregular4"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:text="تأكيد"
                android:onClick="confirm"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>